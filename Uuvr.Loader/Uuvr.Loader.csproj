<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Configurations>il2cpp-legacy;il2cpp-modern;mono-legacy;mono-modern</Configurations>
    <Nullable>disable</Nullable>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <LangVersion>10</LangVersion>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>Uuvr.Loader</RootNamespace>
    <Platforms>AnyCPU</Platforms>
    <OutputPath>$(BepInExDir)\plugins\Uuvr\</OutputPath>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <DebugType>none</DebugType>
  </PropertyGroup>

    <ItemGroup>
        <!-- FIXME We currently use legacy DLLs only. Let's see if this works out with mono-modern and il2cpp-modern implementation dlls. -->
        <Reference Include="..\lib\$(UnityBackend)\$(UnityGeneration)\*.dll">
            <Private>False</Private>
        </Reference>
        <Content Include="Assets\**" >
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

  <PropertyGroup>
    <AssemblyName>Uuvr.Loader.$(UnityBackendFolderName).$(UnityGenerationFolderName)</AssemblyName>
  </PropertyGroup>

  <!--  Mono  -->
  <PropertyGroup Condition=" '$(UnityBackend)' == 'mono' And '$(UnityGeneration)' == 'legacy' ">
    <TargetFramework>net35</TargetFramework>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(UnityBackend)' == 'mono' And '$(UnityGeneration)' == 'modern' ">
    <TargetFramework>net48</TargetFramework>
  </PropertyGroup>
  
  <ItemGroup Condition=" '$(UnityBackend)' == 'mono' ">
    <PackageReference Include="BepInEx.Core" Version="5.4.16" />
  </ItemGroup>

    <!--  Il2Cpp  -->
    <PropertyGroup Condition=" '$(UnityBackend)' == 'il2cpp' ">
        <AssemblyName>Uuvr.Loader.IL2CPP</AssemblyName>
        <TargetFramework>net6.0</TargetFramework>
    </PropertyGroup>
    <ItemGroup Condition=" '$(UnityBackend)' == 'il2cpp' ">
        <PackageReference Include="BepInEx.Unity.IL2CPP" Version="6.0.0-be.692" />
    </ItemGroup>

  <!-- Copy end-user README into plugin output folder -->
  <ItemGroup>
    <Content Include="README.md" Condition="Exists('README.md')">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  
</Project>
