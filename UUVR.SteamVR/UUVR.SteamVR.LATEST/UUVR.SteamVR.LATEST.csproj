<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Configurations>il2cpp-legacy;il2cpp-modern;mono-legacy;mono-modern;Mono-5;Loader-Mono-543p3;SteamVR-2.6.1</Configurations>
    <TargetFrameworks>net35;netstandard2.0;netstandard2.1</TargetFrameworks> <!-- Required for NuGet.Restore -->
    <Nullable>enable</Nullable>
    <Platforms>AnyCPU</Platforms>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <LangVersion>10</LangVersion>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AllowedReferenceRelatedFileExtensions>none</AllowedReferenceRelatedFileExtensions>
    <DebugType>none</DebugType>
<!--    <OutputPath>$(BepInExDir)\mods\$(UnityBackendFolderName)\uuvr-$(UnityBackend)-$(UnityGeneration)\plugins</OutputPath>-->
    <RootNamespace>UUVR.SteamVR.LATEST</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="..\lib\$(UnityBackend)\$(UnityGeneration)\*.dll">
      <Private>False</Private>
    </Reference>
    <Reference Include="..\lib\Valve.Newtonsoft.Json.dll">
      <Private>True</Private>
    </Reference>
  </ItemGroup>


  <!--  Mono  -->
  <PropertyGroup Condition=" '$(Configuration)' == 'mono-legacy' ">
    <TargetFramework>net35</TargetFramework>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'mono-modern' ">
    <TargetFramework>net48</TargetFramework>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Loader-Mono-543p3' ">
    <UnityBackend>Mono</UnityBackend>
    <UnityGeneration>500</UnityGeneration>
    <TargetFramework>net35</TargetFramework>
    <DefineConstants>$(DefineConstants);MONO</DefineConstants>
  </PropertyGroup>

  <!--  Il2Cpp  -->
